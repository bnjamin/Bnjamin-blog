      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    .container#top
      #logo
        %a{:href=>'/'} Benjamin Jørgensen
      %ul#menu
        %li
          .extra_info Go ahead, I don't bite :)
          = link_to "Contact me", "/contact"
        %li
          .extra_info Personal info and testimonials
          = link_to "About", "/about"
        %li
          .extra_info See some of my projects
          = link_to "Projects", "/projects"
        %li
          .extra_info Read my musings
          = link_to "Blog", "/"

